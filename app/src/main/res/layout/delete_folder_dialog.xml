        <!--        android:text="NEW FOLDER"-->
        <!--        android:textAlignment="center"-->
        <!--        android:textSize="18sp"-->
        <!--        android:textStyle="bold" />-->


        <TextView
            android:id="@+id/delete_folder_dialog_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/gmarketsansttfmedium"

            android:gravity="center"
            android:includeFontPadding="true"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Are you sure you want to permanently delete this folder and all its contains?"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/delete_file_name"
            style="@style/Text.Gmarket.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_folder_dialog_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:gravity="center"
            android:includeFontPadding="true"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="20210123"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_file_name"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/dialog_disagree_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:ems="6"
                android:fontFamily="@font/gmarketsansttfmedium"

                android:gravity="center"
                android:includeFontPadding="true"
                android:text="@string/dialog_disagree"
                android:textSize="12sp" />

            <TextView

                android:id="@+id/dialog_agree_btn"
                style="@style/Text.Gmarket.Bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:ems="6"
                android:fontFamily="@font/gmarketsansttfmedium"
                android:gravity="center"
                android:includeFontPadding="true"
                android:text="DELETE"
                android:textColor="#E60000"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>